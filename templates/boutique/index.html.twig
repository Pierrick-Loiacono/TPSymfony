{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}


    <div class="row">
        {% for categorie in categories %}
            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <img src="{{ asset(categorie.visuel) }}" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">{{categorie.libelle}}</h5>
                        <p class="card-text">{{categorie.texte}}</p>
                        <a href="{{ path('produits', {'id':categorie.id}) }}" class="btn btn-primary">Voir</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>


{% endblock %}
